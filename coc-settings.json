{
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "go": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "trace.server": "verbose",
      "filetypes": ["go"],
      "initializationOptions": {
	"usePlaceholders": true	
      }
    },

  "helm": {
      "command": "helm_ls",
      "args": ["serve"],
      "filetypes": ["helm"]
    }
}

